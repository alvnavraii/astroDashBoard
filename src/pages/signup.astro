---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sign Up">
  <div class="min-h-screen flex items-center justify-center">
    <form class="auth-form" id="signupForm">
      <h2 class="text-2xl font-bold text-center mb-6">Create Account</h2>
      
      <div>
        <label for="name" class="block text-sm font-medium mb-1">Full Name</label>
        <input type="text" id="name" name="name" required class="auth-input" />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium mb-1">Email</label>
        <input type="email" id="email" name="email" required class="auth-input" />
      </div>

      <div>
        <label for="password" class="block text-sm font-medium mb-1">Password</label>
        <input type="password" id="password" name="password" required class="auth-input" />
      </div>

      <div>
        <label for="confirmPassword" class="block text-sm font-medium mb-1">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required class="auth-input" />
      </div>

      <button type="submit" class="auth-button mt-6">Sign Up</button>

      <div class="auth-divider">
        <span>or</span>
      </div>

      <div class="text-center text-sm">
        Already have an account? 
        <a href="/signin" class="auth-link">Sign In</a>
      </div>
    </form>
  </div>
</Layout>

<script>
  const form = document.getElementById('signupForm') as HTMLFormElement;
  
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    if (data.password !== data.confirmPassword) {
      alert('Passwords do not match');
      return;
    }

    try {
      // Here you would typically make an API call to your backend
      console.log('Form data:', data);
      // Redirect to signin page after successful registration
      window.location.href = '/signin';
    } catch (error) {
      console.error('Error:', error);
      alert('An error occurred during registration');
    }
  });
</script>
