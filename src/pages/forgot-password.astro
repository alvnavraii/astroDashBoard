---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Forgot Password">
  <div class="min-h-screen flex items-center justify-center">
    <form class="auth-form" id="forgotPasswordForm">
      <h2 class="text-2xl font-bold text-center mb-6">Reset Password</h2>
      
      <p class="text-muted-foreground text-sm text-center mb-6">
        Enter your email address and we'll send you instructions to reset your password.
      </p>

      <div>
        <label for="email" class="block text-sm font-medium mb-1">Email</label>
        <input type="email" id="email" name="email" required class="auth-input" />
      </div>

      <button type="submit" class="auth-button mt-6">Send Reset Link</button>

      <div class="text-center mt-4">
        <a href="/signin" class="auth-link text-sm">Back to Sign In</a>
      </div>
    </form>
  </div>
</Layout>

<script>
  const form = document.getElementById('forgotPasswordForm') as HTMLFormElement;
  
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    try {
      // Here you would typically make an API call to your backend
      console.log('Form data:', data);
      alert('If an account exists with that email, you will receive password reset instructions.');
      window.location.href = '/signin';
    } catch (error) {
      console.error('Error:', error);
      alert('An error occurred. Please try again later.');
    }
  });
</script>
